{% extends 'DevThisDefaultBundle:Admin:_base.html.twig' %}

{% block body %}
	<table class="table table-hover">
	    <thead>
		    <tr>
			    <th>Id</th>
			    <th>Name</th>
			    <th>Category</th>
			    <th>Action</th>
		    </tr>
	    </thead>
	    <tbody>
	    	{% for post in posts %}
			    <tr>
				    <td>{{ post.id }}</td>
				    <td>{{ post.name }}</td>
				    <td>{{ post.category.name }}</td>
				    <td>
				    	<a href="{{ path('dev_this_admin_index') }}" class="btn">Edit</a>
						<a href="#" class="btn btn-danger">
							<i class="icon-search icon-trash"></i>
						</a>
					</td>
			    </tr>
		    {% endfor %}
	    </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('dev_this_admin_post_create') }}">Create post</a>
{% endblock %}