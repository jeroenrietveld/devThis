{% extends 'DevThisDefaultBundle:Admin:_base.html.twig' %}

{% block body %}
	<table class="table table-hover">
	    <thead>
		    <tr>
			    <th>Id</th>
			    <th>Name</th>
			    <th>Action</th>
		    </tr>
	    </thead>
	    <tbody>
	    	{% for category in categories %}
			    <tr>
				    <td>{{ category.id }}</td>
				    <td>{{ category.name }}</td>
				    <td>
				    	<a href="{{ path('dev_this_admin_category_edit', {category_id: category.id}) }}" class="btn">Edit</a>
						<a href="#" class="btn btn-danger">
							<i class="icon-search icon-trash"></i>
						</a>
				    </td>
			    </tr>
		    {% endfor %}
	    </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('dev_this_admin_category_create') }}">Create category</a>
{% endblock %}