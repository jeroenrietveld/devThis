<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}DevThis{% endblock %}</title>
        {% block stylesheets %}
            {% stylesheets
                'bundles/mopabootstrap/less/mopabootstrapbundle.less'
                '@DevThisDefaultBundle/Resources/public/less/main.less'
               filter='?yui_css, cssrewrite'
               output='assets/css/app.css'
            %}
            <link href="{{ asset_url }}" type="text/css" rel="stylesheet" />
            {% endstylesheets %}
        {% endblock %}
        <script>
            (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
                (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
                m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
            })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

            ga('create', 'UA-40012312-1', 'dev-this.com');
            ga('send', 'pageview');
        </script>
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        <div class="navbar navbar-fixed-top">
            <div class="navbar-inner">
                <div class="container-fluid">
                    <a href="#" class="brand">DevThis</a>
                    <div class="nav-collapse collapse">
                    </div>
                </div>
            </div>
        </div>

        <div class="container-fluid">
            <div class="row-fluid">
                <div class="span3">
                    <div class="well sidebar-nav">
                        <ul class="nav nav-list">
                            {% block nav %}{% endblock %}
                        </ul>
                    </div>
                </div>
                <div class="span9">
                    <div class="well">
                        {% block body %}{% endblock %}
                    </div>
                </div>
            </div>
        </div>
        
        {% block javascripts %}
            {% javascripts
                'http://code.jquery.com/jquery-1.8.2.min.js'
                '@DevThisDefaultBundle/Resources/public/js/bootstrap.min.js'
                filter='?yui_js' output='assets/js/admin.js' %}
                <script type="text/javascript" src="{{ asset_url }}"></script>
            {% endjavascripts %}
        {% endblock %}
    </body>
</html>
