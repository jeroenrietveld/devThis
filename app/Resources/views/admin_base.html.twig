<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}DevThis - Admin{% endblock %}</title>
        {% block stylesheets %}
            {% stylesheets
                'bundles/mopabootstrap/less/mopabootstrapbundle.less'
                '@DevThisDefaultBundle/Resources/public/less/main.less'
               filter='?yui_css, cssrewrite'
               output='assets/css/app.css'
            %}
            <link href="{{ asset_url }}" type="text/css" rel="stylesheet" />
            {% endstylesheets %}
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        <div class="container">
            {% block menu %}{% endblock %}
            {% block body %}{% endblock %}
        </div>
        
        {% block javascripts %}
            {% javascripts
                'http://code.jquery.com/jquery-1.8.2.min.js'
                '@DevThisDefaultBundle/Resources/public/js/bootstrap.min.js'
                filter='?yui_js' output='assets/js/admin.js' %}
                <script type="text/javascript" src="{{ asset_url }}"></script>
            {% endjavascripts %}
        {% endblock %}
    </body>
</html>
